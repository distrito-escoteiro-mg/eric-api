extends ../base-layout.pug

block append banner
  td(bgcolor='#ffffff')
    img.fluid(src=`${email.imgPath}reward.jpg`, aria-hidden='true', width='680', height='', alt='alt_text', border='0', align='center', style='width: 100%; max-width: 680px; height: auto; background: #dddddd; font-family: sans-serif; font-size: 15px; line-height: 20px; color: #555555;')
block append content
  td(bgcolor='#ffffff')
    table(role='presentation', aria-hidden='true', cellspacing='0', cellpadding='0', border='0', width='100%')
      tr
        td(style='padding: 30px; text-align: center; font-family: sans-serif; font-size: 15px; line-height: 20px; color: #555555;')
          h2 Atualização da Solicitação de Condecoração/Recompensa.
          p.text-left Sua solicitação de condecoração/recompensa da Região Escoteira de Minas Gerais tem um novo status.
          p.text-left Para conferir, acompanhar e compartilhar o status da solicitação, acesse a página no site:
          br
          table(role='presentation', aria-hidden='true', cellspacing='0', cellpadding='0', border='0', align='center', style='margin: auto')
            tr
              td.button-td(style='border-radius: 3px; background: #222222; text-align: center;')
                a.button-a(href=`${email.base_url}formularios/acompanhamento`, style='background: #222222; border: 15px solid #222222; font-family: sans-serif; font-size: 13px; line-height: 1.1; text-align: center; text-decoration: none; display: block; border-radius: 3px; font-weight: bold;')
                  span.button-link(style='color:#ffffff;') &nbsp;&nbsp;&nbsp;&nbsp;Acesse&nbsp;&nbsp;&nbsp;&nbsp;
      tr
        td(style='padding: 20px; text-align: left; font-family: sans-serif; font-size: 15px; line-height: 20px; color: #555555;')
          h2 Atualização de Status:
          p.text-left 
            dd #[strong Sua Solicitação:] #{reward} para #{gifted.name}
            dd #[strong Novo Status:] #{email.rewardStatus(status)}
            dd #[strong Código de Referência:] #{_id}
            if reply
              dd #[strong Parecer:] #{reply}
